<div class="message <%= if bot(@message) do %>bot<% end %>">
  <div class="avatar">
  </div>

  <div class="container">
    <div class="body">
      <%= @message.body %>
    </div>
    <div class="time" data-time="<%= @message.inserted_at %>">
      <%= relative_time(@message.inserted_at) %>
    </div>
  </div>
</div>
