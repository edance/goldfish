<div class="page show">
  <h1><%= @page.title %></h1>
  <div class="content">
    <%= raw(markdown(@page.body)) %>

    <p>Page Views: <%= @page.views %></p>
  </div>

  <%= if @conn.assigns[:current_user] do %>
    <%= link "Edit", to: Routes.admin_page_path(@conn, :edit, @page) %>
  <% end %>
</div>
