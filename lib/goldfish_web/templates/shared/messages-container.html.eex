<div id="messages-container" class="flex-grow flex flex-col overflow-auto">
  <div class="flex-grow"></div>
  <div id="messages" class="flex-none">
    <%= for message <- Enum.reverse(@messages) do %>
      <%= render GoldfishWeb.MessageView, "show.html", message: message %>
    <% end %>
  </div>

  <div class="hidden">
    <div id="bot-template">
      <%= render GoldfishWeb.MessageView, "show.html", message: %{bot: true, body: "{{body}}", inserted_at: "{{inserted_at}}"} %>
    </div>

    <div id="user-template">
      <%= render GoldfishWeb.MessageView, "show.html", message: %{bot: false, user_id: nil, body: "{{body}}", inserted_at: "{{inserted_at}}"} %>
    </div>
  </div>
</div>
