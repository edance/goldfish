<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= home_url(@conn, :index) %></loc>
  </url>

  <url>
    <loc><%= page_url(@conn, :index) %></loc>
  </url>

  <%= for page <- @pages do %>
    <url>
      <loc><%= page_url(@conn, :show, page.slug) %></loc>
    </url>
  <% end %>
</urlset>
